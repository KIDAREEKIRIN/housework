<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_houseWork1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="379dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_houseWork1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_houseWork1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="가정일 알아보기"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/iv_houseWork1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="75dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/book" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_houseWork2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_houseWork2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_houseWork2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="나와 가족구성원의
                    가정일 실천하기"
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/iv_houseWork2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/house" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
